{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "semi": 2,
    "curly": 2,
    "eqeqeq": 2,
    "spaced-comment": 2,
    "space-infix-ops": 2,
    "newline-before-return": 0,
    "quotes": [2, "single", {"allowTemplateLiterals": true}],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "indent": ["error", "2"],
    "no-mixed-spaces-and-tabs": 0,
    "camelcase": 0
  }
}
